<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Demo</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-default navbar-trans navbar-expand-lg ">
        <div class="container">
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarDefault"
                    aria-controls="navbarDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <a class="navbar-brand text-brand" href="/"><img src="https://www.elemanuzmani.com/images/elemanuzmani.png" height="100" /></a>
            <div class="navbar-collapse collapse justify-content-center" id="navbarDefault">
                <div>
                    <div class="d-none d-lg-block text-center text-monospace" style="font-size:20px; margin-bottom:3%;">
                        <a href="tel:0212-571-65-54" class="color-blue text-decoration-none">
                            <i class="fa fa-phone-square"></i>
                            <span class="font-weight-bold text-danger" title="İlan ver">İlan Ver: </span>
                            0212 571 65 54
                        </a>
                    </div>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/is-ilanlari">İş İlanları</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/acil-is-ilanlari">Acil İş İlanları</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Sektore-gore-is-ilanlari">Sektöre Göre İş İlanları</a>
                        </li>
                        <li class="nav-item">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link text-success" href="/giris-yap"><i class="fa fa-sign-in"></i> Giriş Yap</a>
                            }
                            else
                            {
                                <a class="nav-link text-danger" href="/cikis-yap"><i class="fa fa-sign-out"></i> Çıkış Yap</a>
                            }

                        </li>
                    </ul>
                </div>

            </div>
            @if (!User.Identity.IsAuthenticated)
            {
                <a href="/giris-yap" class="btn btn-b-n btn-info d-none d-lg-block bgcolor-blue">
                    Giriş Yap
                </a>
            }
            else
            {
                <div class="" style="max-width:160px">
                    <p>Hoşgeldiniz, <b>@User.Identity.Name</b></p>
                    <a href="/cikis-yap" class="d-none d-lg-block btn btn-danger btn-sm">
                        Çıkış Yap
                    </a>
                </div>
                
            }

        </div>
    </nav>
    <div class="intro col-12">
        <div class="container mainSearchBar text-center">
            <div class="MainText pt-4">
                <label class="text-white">
                    İşinizi Şansa Bırakmayın
                </label>
            </div>
            <div class="input-group col-lg-6 col-md-9 col-sm-12">
                <input class="form-control" type="text" placeholder="Ara" aria-label="Ara">
                <div class="input-group-append">
                    <select>
                        <option value=0 selected>Tüm Şehirler</option>
                        @{
                            string[] Cities = Html.CityList();
                        }
                        @for (int i = 0; i < Cities.Length; i++)
                        {
                            <option value=@(i+1)>@Cities[i]</option>
                        }
                    </select>
                    <button onclick="Search()" class="input-group-text btn btn-success">
                        İş Ara
                    </button>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()

    <div id="footer">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-md-4">
                    <a href="#" class="staff">Eleman İlan Demo Proje</a><br>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>